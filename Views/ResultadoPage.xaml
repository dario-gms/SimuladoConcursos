<Page x:Class="SimuladoConcursos.Views.ResultadoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SimuladoConcursos.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResultadoPage">

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Resultado do Simulado" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="{Binding TempoDecorrido, StringFormat='Tempo total: {0:hh\\:mm\\:ss}'}" 
                       FontSize="16" 
                       Margin="0,0,0,20"/>

            <!-- Aqui viria a lista de questões e respostas -->

            <Button Content="Voltar ao Início" 
                    HorizontalAlignment="Center" 
                    Margin="0,20" 
                    Width="150" 
                    Height="40"
                    Click="VoltarButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>