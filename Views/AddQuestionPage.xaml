<Page x:Class="SimuladoConcursos.Views.AddQuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SimuladoConcursos.Views"
      xmlns:viewModels="clr-namespace:SimuladoConcursos.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Adicionar Questão"
      Background="#FFF5F5F5">

    <ScrollViewer>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Adicionar Nova Questão" 
                       Grid.Row="0" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"
                       Foreground="#FF3F51B5"/>

            <Label Content="Enunciado:" Grid.Row="1"/>
            <TextBox Grid.Row="1" 
                     Height="100" 
                     Text="{Binding Enunciado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,5,0,20" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"/>

            <Label Content="Opções (Cole o texto com as opções A, B, C, etc.):" Grid.Row="2"/>
            <TextBox Grid.Row="2" 
                     Height="150" 
                     Text="{Binding OpcoesText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,5,0,20" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"/>

            <Label Content="Resposta Correta (Letra):" Grid.Row="3"/>

            <Label Content="Área de Conhecimento:" Grid.Row="4"/>
            <TextBox Grid.Row="4" 
                     Text="{Binding AreaConhecimento, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,5,0,20"/>
            
            <Button Content ="Voltar"
                    Grid.Row = "5"
                    Height = "40"
                    HorizontalAlignment = "Left"
                    Width="100"
                    Click="VoltarButton_Click"
                    Background="#FF757575"
                    Foreground="White"/>
                    

            <Button Content="Adicionar Questão" 
                    Grid.Row="5" 
                    Height="40" 
                    Command="{Binding AddQuestionCommand}" 
                    HorizontalAlignment="Right" 
                    Width="150"
                    Background="#FF3F51B5"
                    Foreground="White"/>
        </Grid>
    </ScrollViewer>
</Page>